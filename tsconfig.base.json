{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nxan/client/core/api": ["libs/client/core/api/src/index.ts"],
      "@nxan/client/core/auth": ["libs/client/core/auth/src/index.ts"],
      "@nxan/client/core/config": ["libs/client/core/config/src/index.ts"],
      "@nxan/client/feature-home/mobile": ["libs/client/feature-home/mobile/src/index.ts"],
      "@nxan/client/feature-home/web": ["libs/client/feature-home/web/src/index.ts"],
      "@nxan/client/feature-login/data": ["libs/client/feature-login/data/src/index.ts"],
      "@nxan/client/feature-login/mobile": ["libs/client/feature-login/mobile/src/index.ts"],
      "@nxan/client/feature-login/web": ["libs/client/feature-login/web/src/index.ts"],
      "@nxan/server/core": ["libs/server/core/src/index.ts"],
      "@nxan/server/core/*": ["libs/server/core/src/lib/*"],
      "@nxan/server/feature-auth/api": ["libs/server/feature-auth/api/src/index.ts"],
      "@nxan/server/feature-users/api": ["libs/server/feature-users/api/src/index.ts"],
      "@nxan/server/feature-users/domain": ["libs/server/feature-users/domain/src/index.ts"],
      "@nxan/shared/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
